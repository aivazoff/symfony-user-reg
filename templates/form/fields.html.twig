{% use 'bootstrap_4_layout.html.twig' %}

{% block file_widget %}
    {% spaceless %}
        {{ parent() }}
        <script>
            (function(){
                var fieeld = document.querySelector('#{{ form.vars.id }}'),
                    label = fieeld.parentNode.querySelector('label[for="{{ form.vars.id }}"]');
                fieeld.addEventListener('change', function() {
                    label.innerText = fieeld.files.length > 0 ? fieeld.files[0].name : '';
                }, false);
            })();
        </script>
    {% endspaceless %}
{% endblock %}

{% block image_widget %}
    {% spaceless %}
        {{ block('file_widget') }}
    {% endspaceless %}
{% endblock %}